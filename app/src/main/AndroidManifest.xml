<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ie.wit.poland">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="ie.wit.poland.activities.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".main.LandmarkApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <activity android:name=".activities.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.Register" />
        <activity
            android:name=".activities.Home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.Help" />
        <activity android:name=".activities.LogIn" />
        <activity android:name=".activities.ChangePassword" />
        <activity android:name=".activities.Deactivate" />
        <activity android:name=".activities.ImageActivity" />
        <activity android:name=".activities.ImageView"></activity>
    </application>

</manifest>