<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ie.wit.poland">

    <application
        android:name=".main.LandmarkApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.Register" />
        <activity
            android:name=".activities.Home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.Add" />
        <activity android:name=".activities.Help" />
        <activity android:name=".activities.Edit" />
        <activity android:name=".activities.Favourites" />
        <activity android:name=".activities.Search" />
        <activity android:name=".activities.LogIn" />
        <activity android:name=".activities.ChangePassword" />
        <activity android:name=".activities.Deactivate" />
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>